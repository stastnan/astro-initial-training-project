---
import ButtonLink from "./ButtonLink.astro";
import Section from "./Section.astro";
---

<Section>
  <header id="header">
    <div class="content">
      <h1>
        Hi. I am Nikola.
        <span class="accent">Front-end</span>
        developer!
      </h1>

      <p class="description">
        I am a Front-end Developer with a passion for creating beautiful and
        functional web applications. I specialize in building responsive and
        user-friendly interfaces using modern web technologies.
      </p>

      <div class="button-container">
        <ButtonLink href="/projects" text="View Projects" variant="secondary" />
        <ButtonLink
          href="/resume.pdf"
          text="Download my CV"
          variant="primary"
          isDownload
        />
      </div>
    </div>

    <img src="/me.png" alt="my profile picture" />
  </header>
</Section>

<style>
  .button-link {
    padding: 14px 32px;
    text-decoration: none;
    text-align: center;
    width: 230px;
  }

  .primary {
    background: var(--primary);
    color: white;
  }

  .secondary {
    background: white;
    color: var(--primary);
    border: 1px solid var(--primary);
  }

  #header {
    display: grid;
    grid-template-columns: 540px 1fr;
    justify-items: center;
    gap: 80px;
    align-items: center;
  }

  #header h1 {
    font-size: 44px;
    margin-bottom: 10px;
  }

  #header .accent {
    color: var(--primary);
    display: inline-block;
  }

  #header img {
    max-width: 200px;
  }

  #header .button-container {
    display: flex;
    gap: 10px;
  }

  #header .description {
    line-height: 28px;
    color: var(--dark);
    margin-bottom: 30px;
  }

  @media (max-width: 1000px) {
    #header {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 40px;
    }

    #header img {
      grid-row: 1;
    }
  }

  @media (max-width: 600px) {
    #header .button-container {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
